<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/def_content_bg"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/def_item_padding">

        <TextView
            android:id="@+id/word_txt_text"
            style="@style/def_tv"
            android:layout_centerVertical="true"
            android:textSize="@dimen/fontLetter"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/word_img_collect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <View
        style="@style/view_line"/>

    <TextView
        android:id="@+id/word_txt_accents"
        style="@style/def_tv"
        android:layout_width="match_parent"
        android:background="@drawable/select_btn_gray_blue"
        android:drawableLeft="@drawable/img_sound"
        android:drawablePadding="@dimen/def_draw_padding"
        android:paddingBottom="5dp"
        android:paddingLeft="@dimen/def_item_padding"
        android:paddingRight="@dimen/def_item_padding"
        android:paddingTop="5dp"
        android:textColor="@color/black89"/>
    <View
        style="@style/view_line"/>

    <android.support.v7.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:minHeight="100dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/def_radius"
        app:cardElevation="@dimen/def_elevation"
        app:contentPadding="@dimen/def_item_padding">

        <TextView
            android:id="@+id/word_txt_content"
            style="@style/def_tv"
            android:singleLine="false"/>

    </android.support.v7.widget.CardView>
</LinearLayout>