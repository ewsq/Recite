<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SwipeBackLayout">
        <item name="edge_size">50dip</item>
        <item name="shadow_left">@drawable/shadow_left</item>
        <item name="shadow_right">@drawable/shadow_right</item>
    </style>
    <style name="BaseSlideAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/enter_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/enter_exit</item>
        <item name="android:activityCloseEnterAnimation">@anim/exit_enter</item>
        <item name="android:activityCloseExitAnimation">@anim/exit_exit</item>
        <item name="android:taskOpenEnterAnimation">@anim/enter_enter</item>
        <item name="android:taskOpenExitAnimation">@anim/enter_exit</item>
        <item name="android:taskCloseEnterAnimation">@anim/exit_enter</item>
        <item name="android:taskCloseExitAnimation">@anim/exit_exit</item>
        <item name="android:taskToFrontEnterAnimation">@anim/enter_enter</item>
        <item name="android:taskToFrontExitAnimation">@anim/enter_exit</item>
        <item name="android:taskToBackEnterAnimation">@anim/exit_enter</item>
        <item name="android:taskToBackExitAnimation">@anim/exit_exit</item>
    </style>
</resources>